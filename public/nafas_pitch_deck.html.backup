    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nafas - Championship Pitch Deck</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-dark: #0a0f1e;
            --bg-card: #0f172a;
            --accent: #38bdf8;
            --accent-bright: #0ea5e9;
            --accent-glow: rgba(56, 189, 248, 0.6);
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --glass-bg: rgba(30, 41, 59, 0.8);
            --glass-border: rgba(56, 189, 248, 0.2);
            --red: #ef4444;
            --green: #22c55e;
            --yellow: #eab308;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg-dark);
            color: var(--text-main);
            overflow: hidden;
        }

        .slide-container {
            width: 100vw;
            height: 100vh;
            position: relative;
            perspective: 1200px;
        }

        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            visibility: hidden;
            transition: all 0.9s cubic-bezier(0.4, 0, 0.2, 1);
            transform: scale(0.92) translateY(40px) rotateX(5deg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 4rem;
            background: radial-gradient(ellipse at top, #1e293b 0%, var(--bg-dark) 60%);
        }

        .slide.active {
            opacity: 1;
            visibility: visible;
            transform: scale(1) translateY(0) rotateX(0);
            z-index: 10;
        }

        /* Animated Background */
        .orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(100px);
            z-index: -1;
            animation: float 12s infinite ease-in-out;
            opacity: 0.4;
        }

        .orb-1 {
            width: 500px;
            height: 500px;
            background: var(--accent);
            top: -150px;
            left: -150px;
        }

        .orb-2 {
            width: 400px;
            height: 400px;
            background: #9333ea;
            bottom: -100px;
            right: -100px;
            animation-delay: -6s;
        }

        .orb-3 {
            width: 350px;
            height: 350px;
            background: var(--accent-bright);
            top: 50%;
            left: 50%;
            animation-delay: -3s;
        }

        @keyframes float {

            0%,
            100% {
                transform: translate(0, 0) scale(1);
            }

            33% {
                transform: translate(40px, 60px) scale(1.1);
            }

            66% {
                transform: translate(-30px, -40px) scale(0.9);
            }
        }

        /* Typography */
        h1 {
            font-size: 5rem;
            font-weight: 900;
            line-height: 1;
            margin-bottom: 2rem;
            background: linear-gradient(135deg, #fff 0%, var(--accent) 100%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            letter-spacing: -0.02em;
        }

        h2 {
            font-size: 3.5rem;
            color: var(--accent);
            margin-bottom: 2.5rem;
            text-align: center;
            font-weight: 800;
            text-shadow: 0 0 40px var(--accent-glow);
        }

        h3 {
            font-size: 1.8rem;
            color: #fff;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        p {
            font-size: 1.6rem;
            color: var(--text-muted);
            line-height: 1.7;
            max-width: 1000px;
            text-align: center;
        }

        .highlight {
            color: var(--accent);
            font-weight: 700;
            text-shadow: 0 0 20px var(--accent-glow);
        }

        .glass-panel {
            background: var(--glass-bg);
            backdrop-filter: blur(16px);
            border: 2px solid var(--glass-border);
            border-radius: 1.5rem;
            padding: 2.5rem;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.5), 0 0 40px var(--accent-glow);
            transition: all 0.3s;
        }

        .glass-panel:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 70px rgba(0, 0, 0, 0.6), 0 0 60px var(--accent-glow);
        }

        .logo-img {
            height: 140px;
            margin-bottom: 2rem;
            filter: drop-shadow(0 0 30px var(--accent-glow));
            animation: glow-pulse 3s infinite;
        }

        @keyframes glow-pulse {

            0%,
            100% {
                filter: drop-shadow(0 0 30px var(--accent-glow));
            }

            50% {
                filter: drop-shadow(0 0 50px var(--accent-glow));
            }
        }

        /* Grid Layouts */
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            width: 100%;
            max-width: 1300px;
            align-items: center;
        }

        .grid-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            width: 100%;
            max-width: 1300px;
        }

        .grid-4 {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            width: 100%;
            max-width: 1100px;
        }

        /* Cards */
        .card {
            background: linear-gradient(135deg, rgba(56, 189, 248, 0.05) 0%, rgba(15, 23, 42, 0.8) 100%);
            border: 2px solid rgba(56, 189, 248, 0.15);
            padding: 2.5rem;
            border-radius: 1.5rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--accent) 0%, transparent 50%);
            opacity: 0;
            transition: opacity 0.4s;
        }

        .card:hover {
            transform: translateY(-8px) scale(1.02);
            border-color: var(--accent);
            box-shadow: 0 20px 50px rgba(56, 189, 248, 0.3);
        }

        .card:hover::before {
            opacity: 0.1;
        }

        .card-icon {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            display: block;
            filter: drop-shadow(0 0 10px var(--accent-glow));
        }

        .card h3 {
            position: relative;
            z-index: 1;
        }

        .card p {
            font-size: 1.2rem;
            text-align: left;
            position: relative;
            z-index: 1;
        }

        /* Stats */
        .big-stat {
            font-size: 5rem;
            font-weight: 900;
            color: var(--accent);
            line-height: 1;
            margin-bottom: 0.5rem;
            text-shadow: 0 0 40px var(--accent-glow);
        }

        .metric-box {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(15, 23, 42, 0.8) 100%);
            border: 2px solid rgba(34, 197, 94, 0.3);
            padding: 1.5rem;
            border-radius: 1rem;
            text-align: center;
        }

        .metric-value {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--green);
            margin-bottom: 0.5rem;
        }

        .metric-label {
            font-size: 1rem;
            color: var(--text-muted);
        }

        /* Screenshot Container */
        .screenshot-container {
            display: flex;
            justify-content: center;
            width: 100%;
            max-width: 1000px;
        }

        .screenshot-container img {
            width: 100%;
            height: auto;
            border-radius: 1.5rem;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.6), 0 0 40px var(--accent-glow);
            border: 2px solid var(--glass-border);
            transition: all 0.4s;
        }

        /* Controls */
        .controls {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            display: flex;
            gap: 1rem;
            z-index: 100;
        }

        .btn {
            background: linear-gradient(135deg, var(--accent) 0%, var(--accent-bright) 100%);
            border: none;
            color: #000;
            padding: 1rem 2rem;
            border-radius: 2rem;
            cursor: pointer;
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.3s;
            box-shadow: 0 4px 20px var(--accent-glow);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px var(--accent-glow);
        }

        .progress {
            position: fixed;
            bottom: 0;
            left: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--accent) 0%, #9333ea 100%);
            transition: width 0.4s;
            box-shadow: 0 0 20px var(--accent-glow);
        }

        .slide-number {
            position: fixed;
            top: 2rem;
            right: 2rem;
            font-size: 1.2rem;
            color: var(--text-muted);
            font-weight: 600;
            z-index: 100;
        }

        /* Special Slide Styles */
        .team-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            margin-top: 2rem;
            width: 100%;
            max-width: 1300px;
        }

        .team-card {
            background: var(--glass-bg);
            border: 2px solid var(--glass-border);
            padding: 2rem;
            border-radius: 1rem;
            text-align: center;
        }

        .team-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .closing-tagline {
            font-size: 3.5rem;
            font-weight: 800;
            color: var(--accent);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-top: 2rem;
            text-shadow: 0 0 40px var(--accent-glow);
            text-align: center;
        }

        .split-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            width: 100%;
            max-width: 1300px;
            align-items: center;
        }

        .list-item {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            text-align: left;
        }

        .list-icon {
            color: var(--accent);
            margin-right: 1rem;
            font-size: 2rem;
        }
    </style>
</head>

